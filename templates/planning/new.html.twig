    <script>
        $(document).ready(function() {
            function updateCoursLimit() {
                let type = $('#abonnement_type').val();
                let minCours = 1; // Minimum par défaut

                if (type === 'Gold') minCours = 2;  // Minimum 2 cours pour Gold
                else if (type === 'Diamond') minCours = 3;
                else if (type === 'Premium') minCours = 4;

                let selectedCount = $('input[name="abonnement[cours][]"]:checked').length;

                $('input[name="abonnement[cours][]"]').each(function() {
                    if (!$(this).is(':checked') && selectedCount >= minCours) {
                        $(this).prop('disabled', true);
                    } else {
                        $(this).prop('disabled', false);
                    }
                });

                // Vérification côté client : Si le nombre de cours sélectionnés est inférieur au minimum
                if (selectedCount < minCours) {
                    $('#submitBtn').prop('disabled', true); // Désactive le bouton de soumission
                    $('#coursError').text('Veuillez sélectionner au moins ' + minCours + ' cours pour cet abonnement.');
                } else {
                    $('#submitBtn').prop('disabled', false); // Active le bouton de soumission
                    $('#coursError').text('');
                }
            }

            $('#abonnement_type').change(updateCoursLimit);
            $('input[name="abonnement[cours][]"]').change(updateCoursLimit);

            updateCoursLimit();
        });
    </script>
