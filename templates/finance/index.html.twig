    <script>
    function sortReports(order) {
        const container = document.getElementById('reports-container');
        if (!container) {
          console.error("Le conteneur des rapports n'a pas été trouvé");
          return;
        }
        
        // Sélectionne à la fois les cartes et les modals
        const reportCards = Array.from(container.querySelectorAll('.report-card'));
        const modals = Array.from(container.querySelectorAll('.modal'));
        
        // Crée un tableau combiné avec les paires carte/modal
        const reports = reportCards.map(card => {
          const modalId = card.querySelector('button[data-bs-target]')?.getAttribute('data-bs-target').replace('#', '');
          const modal = modalId ? document.getElementById(modalId) : null;
          return { card, modal };
        }).filter(item => item.modal !== null);
        
        // Trier les rapports
        reports.sort((a, b) => {
          const yearA = parseInt(a.card.getAttribute('data-year'));
          const yearB = parseInt(b.card.getAttribute('data-year'));
          const monthA = parseInt(a.card.getAttribute('data-month'));
          const monthB = parseInt(b.card.getAttribute('data-month'));
          
          if (yearA !== yearB) {
            return order === 'asc' ? yearA - yearB : yearB - yearA;
          } else {
            return order === 'asc' ? monthA - monthB : monthB - monthA;
          }
        });
        
        // Vider le conteneur
        container.innerHTML = '';
        
        // Réinsérer les rapports triés en conservant l'ordre carte/modal
        reports.forEach(({ card, modal }) => {
          container.appendChild(card);
          container.appendChild(modal);
        });
        
        // Réinitialiser les modals Bootstrap
        if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
          const modalInstances = reports.map(({ modal }) => {
            return bootstrap.Modal.getOrCreateInstance(modal);
          });
        }
      }
