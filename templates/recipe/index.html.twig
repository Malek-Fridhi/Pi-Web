<script>
    // Activer les animations wow.js
    new WOW().init();
    $(document).ready(function() {
        // Gestion de l'ajout de repas
        $('.add-meal').click(function(e) {
            e.preventDefault();
            const recipeId = $(this).data('recipe-id');
            const recipeTitle = $(this).data('recipe-title');
            const recipeCalories = $(this).data('recipe-calories');
            $.ajax({
                url: '{{ path("app_add_meal", {id: 0}) }}'.replace('0', recipeId),
                method: 'POST',
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        updateMealsList(response.meals, response.totalCalories);
                    }
                },
                error: function() {
                    alert('Erreur lors de l\'ajout du repas');
                }
            });
        });
        // Gestion de la suppression de repas
        $(document).on('click', '.remove-meal', function(e) {
            e.preventDefault();
            const index = $(this).data('index');
            $.ajax({
                url: '{{ path("app_remove_meal", {index: 0}) }}'.replace('0', index),
                method: 'POST',
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        updateMealsList(response.meals, response.totalCalories);
                    }
                },
                error: function() {
                    alert('Erreur lors de la suppression du repas');
                }
            });
        });
        // Gestion du vidage de la liste
        $('#clear-meals').click(function(e) {
            e.preventDefault();
            $.ajax({
                url: '{{ path("app_clear_meals") }}',
                method: 'POST',
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        updateMealsList(response.meals, response.totalCalories);
                    }
                },
                error: function() {
                    alert('Erreur lors du vidage de la liste');
                }
            });
        });
        // Fonction pour mettre à jour la liste des repas
        function updateMealsList(meals, totalCalories) {
            const $mealsList = $('#meals-list');
            $mealsList.empty();
            if (meals.length > 0) {
                meals.forEach(function(meal, index) {
                    $mealsList.append(`
                        <tr data-index="${index}">
                            <td>${meal.title}</td>
                            <td>${Math.round(meal.calories)} kcal</td>
                            <td>
                                <button class="btn btn-danger btn-sm remove-meal" data-index="${index}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `);
                });
            } else {
                $mealsList.append(`
                    <tr>
                        <td colspan="3" class="text-center">Aucun repas consommé</td>
                    </tr>
                `);
            }
            $mealsList.append(`
                <tr class="table-active">
                    <td><strong>Total</strong></td>
                    <td colspan="2"><strong id="total-calories">${Math.round(totalCalories)} kcal</strong></td>
                </tr>
            `);
        }
    });
</script>
