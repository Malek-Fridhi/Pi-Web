                    <tr>
                        <th>Recette</th>
                        <th>Calories</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="meals-list">
                    {% for meal in consumed_meals %}
                        <tr data-index="{{ loop.index0 }}">
                            <td>{{ meal.title }}</td>
                            <td>{{ meal.calories|round }} kcal</td>
                            <td>
                                <button class="btn btn-danger btn-sm remove-meal" data-index="{{ loop.index0 }}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucun repas consommé</td>
                        </tr>
                    {% endfor %}
                    <tr class="table-active">
                        <td><strong>Total</strong></td>
                        <td colspan="2"><strong id="total-calories">{{ total_calories|round }} kcal</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="text-center mt-4">
            <button id="clear-meals" class="btn btn-outline-danger">
                <i class="fas fa-trash me-2"></i> Vider la liste
