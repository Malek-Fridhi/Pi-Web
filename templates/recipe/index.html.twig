<!-- Recipe Results Section Start -->
{% if recipes|length > 0 %}
<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s">
            <h4 class="text-primary">Résultats</h4>
            <h1 class="display-4 mb-4">Nos suggestions de recettes</h1>
        </div>
        <div class="row gy-4 gx-0 justify-content-center">
            {% for recipe in recipes %}
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="{{ 0.2 + (loop.index0 * 0.2) }}s">
                <div class="courses-item">
                    <div class="courses-item-inner p-4">
                        <div class="courses-img mb-4">
                            <img src="{{ recipe.image }}" class="img-fluid w-100 rounded" alt="{{ recipe.title }}" style="height: 200px; object-fit: cover;">
                        </div>
                        <h4 class="mb-3">{{ recipe.title }}</h4>
                        {% if recipe.nutrition.nutrients is defined %}
                        <div class="mb-4">
                            <div class="row g-2">
                                {% for nutrient in recipe.nutrition.nutrients %}
                                    {% if nutrient.name in ['Calories', 'Protein'] %}
                                    <div class="col-6">
                                        <div class="bg-primary p-2 rounded text-center">
                                            <small class="d-block text-white">{{ nutrient.name }}</small>
                                            <strong class="text-white">{{ nutrient.amount|round }} {{ nutrient.unit }}</strong>
                                        </div>
                                    </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        <div class="d-flex flex-column">
                            <a href="{{ path('app_recipe_show', {id: recipe.id}) }}" class="btn btn-primary py-2 px-4 mb-2">
                                <i class="fas fa-utensils me-2"></i> <span>Voir la recette</span>
                            </a>
                            <button class="btn btn-success py-2 px-4 add-meal" data-recipe-id="{{ recipe.id }}" data-recipe-title="{{ recipe.title }}" data-recipe-calories="{{ recipe.nutrition.nutrients.Calories.amount|default(0) }}">
                                <i class="fas fa-plus me-2"></i> <span>Ajouter à mes repas</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% else %}
<div class="container-fluid py-5 bg-light">
    <div class="container py-5 text-center wow fadeInUp" data-wow-delay="0.2s">
        <div class="alert alert-info mx-auto" style="max-width: 600px;">
