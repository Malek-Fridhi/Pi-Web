{% block title %}{{ evenement.titre }}
 
 {% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" />
       <link rel="stylesheet" href="{{ asset('assets/css/plugins.min.css') }}" />
       <link rel="stylesheet" href="{{ asset('assets/css/kaiadmin.min.css') }}" />
       <link rel="stylesheet" href="{{ asset('assets/css/demo.css') }}" />
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
     {{ parent() }}
     <style>
         :root {
             --primary-color: #4361ee;
             --primary-hover: #3a56d4;
             --secondary-color: #6c757d;
             --border-color: #e9ecef;
             --text-color: #495057;
             --light-bg: #f8f9fa;
             --card-shadow: 0 10px 30px -5px rgba(0,0,0,0.1);
         }
         
         .detail-container {
             max-width: 800px;
             margin: 0 auto;
             padding: 1.5rem;
         }
         
         .detail-card {
             background: white;
             border-radius: 16px;
             box-shadow: var(--card-shadow);
             padding: 2rem;
             margin-bottom: 1.5rem;
             border: 1px solid var(--border-color);
         }
         
         .page-header {
             margin-bottom: 1.5rem;
             position: relative;
             display: flex;
             justify-content: space-between;
             align-items: center;
             flex-wrap: wrap;
             gap: 1rem;
         }
         
         .page-header h1 {
             font-weight: 600;
             color: #212529;
             margin-bottom: 0.25rem;
             font-size: 1.5rem;
         }
         
         .header-actions {
             display: flex;
             gap: 1rem;
             align-items: center;
         }
         
         .btn-back {
             background: white;
             border: 2px solid var(--border-color);
             border-radius: 50px;
             padding: 8px 16px;
             font-weight: 600;
             display: inline-flex;
             align-items: center;
             gap: 0.5rem;
             transition: all 0.3s ease;
             color: var(--text-color);
             font-size: 0.9rem;
             text-decoration: none;
         }
         
         .btn-back:hover {
             background: var(--light-bg);
             border-color: var(--primary-color);
             color: var(--primary-color);
         }
         
         .btn-edit {
             background: var(--primary-color);
             color: white;
             border: none;
             padding: 8px 16px;
             border-radius: 50px;
             font-weight: 600;
             display: inline-flex;
             align-items: center;
             gap: 0.5rem;
             transition: all 0.3s ease;
             text-decoration: none;
         }
         
         .btn-edit:hover {
             background: var(--primary-hover);
             transform: translateY(-2px);
         }
         
         .detail-item {
             display: flex;
             margin-bottom: 1.5rem;
             padding-bottom: 1rem;
             border-bottom: 1px solid var(--border-color);
         }
         
         .detail-label {
             font-weight: 600;
             color: var(--text-color);
             min-width: 150px;
             font-size: 0.95rem;
         }
         
         .detail-value {
             flex: 1;
             color: var(--text-color);
         }
         
         .event-image {
             max-width: 100%;
             border-radius: 12px;
             margin-top: 1rem;
             border: 2px solid var(--border-color);
             box-shadow: 0 4px 10px rgba(0,0,0,0.05);
         }
         
         .actions-footer {
             display: flex;
             justify-content: space-between;
             align-items: center;
             margin-top: 2rem;
             padding-top: 1.5rem;
             border-top: 2px solid var(--border-color);
         }
         
         .delete-btn {
             background: none;
             border: none;
             color: #dc3545;
             font-size: 1rem;
             cursor: pointer;
             transition: all 0.2s ease;
             padding: 8px;
             display: flex;
             align-items: center;
             gap: 0.5rem;
         }
         
         .delete-btn:hover {
             color: #c82333;
             transform: scale(1.05);
         }
         
         @media (max-width: 768px) {
             .detail-container {
                 padding: 1rem;
             }
             
             .detail-card {
                 padding: 1.5rem;
             }
             
             .detail-item {
                 flex-direction: column;
             }
             
             .detail-label {
                 margin-bottom: 0.5rem;
             }
         }
     </style>
 {% endblock %}
 
 {% block body %}
 <div class="detail-container">
     <div class="page-header">
         <h1>{{ evenement.titre }}</h1>
 
         <div class="header-actions">
             <a href="{{ path('app_evenement_index') }}" class="btn-back">
                 <i class="fas fa-arrow-left"></i> Retour
             </a>
 
             <a href="{{ path('app_evenement_edit', {'idevenement': evenement.idevenement}) }}" class="btn-edit">
                 <i class="fas fa-edit"></i> Modifier
             </a>
         </div>
     </div>
 
     <div class="detail-card">
         <div class="detail-item">
             <div class="detail-label">Description</div>
             <div class="detail-value">{{ evenement.description }}</div>
         </div>
 
         <div class="detail-item">
             <div class="detail-label">Date</div>
             <div class="detail-value">{{ evenement.date ? evenement.date|date('d/m/Y H:i') : '' }}</div>
         </div>
 
         <div class="detail-item">
             <div class="detail-label">Durée</div>
             <div class="detail-value">{{ evenement.duree }} heures</div>
         </div>
 
         <div class="detail-item">
             <div class="detail-label">Capacité</div>
             <div class="detail-value">{{ evenement.capacite }} personnes</div>
         </div>
 
         <div class="detail-item">
             <div class="detail-label">Statut</div>
             <div class="detail-value">
                 {% if evenement.statut == 'ouvert' %}
                     <span style="color: #28a745;"><i class="fas fa-check-circle"></i> Ouvert</span>
                 {% elseif evenement.statut == 'complet' %}
                     <span style="color: #dc3545;"><i class="fas fa-times-circle"></i> Complet</span>
                 {% else %}
                     {{ evenement.statut }}
                 {% endif %}
             </div>
         </div>
 
         {% if evenement.imageUrl %}
         <div class="detail-item">
             <div class="detail-label">Image</div>
             <div class="detail-value">
                 <img src="{{ asset(evenement.imageUrl) }}" class="event-image" alt="Image de l'événement">
             </div>
         </div>
         {% endif %}
 
         <div class="actions-footer">
             <div></div> <!-- Empty div for flex spacing -->
 
             <form method="post" action="{{ path('app_evenement_delete', {'idevenement': evenement.idevenement}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                 <input type="hidden" name="_method" value="DELETE">
                 <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.idevenement) }}">
                 <button type="submit" class="delete-btn">
                     <i class="fas fa-trash"></i> Supprimer
                 </button>
             </form>
             {# Ajoutez ce bouton dans templates/evenement/show.html.twig #}
 <a href="{{ path('app_evenement_inscriptions', {'idevenement': evenement.idevenement}) }}" class="btn btn-info">
     Voir les inscriptions
 </a>
         </div>
     </div>
     <div class="mt-3">
     <a href="{{ path('app_evenement_inscriptions', {'idevenement': evenement.idevenement}) }}" 
        class="btn btn-primary">
         <i class="fas fa-users"></i> Voir les inscriptions
     </a>
 
     {# Conservez vos autres boutons existants #}
     <a href="{{ path('app_evenement_edit', {'idevenement': evenement.idevenement}) }}" class="btn btn-warning">
         <i class="fas fa-edit"></i> Modifier
     </a>
 </div>
 </div>
 {% endblock %}