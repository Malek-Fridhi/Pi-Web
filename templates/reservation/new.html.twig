    <script>
        $(document).ready(function() {
            $('#reservationForm').submit(function(event) {
                let isValid = true;

                // Reset error messages
                $('.error-message').text('');

                // Validate Date Reservation - Ensure it's not a past date
                const dateReservation = $('#reservation_date_reservation').val();
                const today = new Date().toISOString().split('T')[0]; // Get current date in YYYY-MM-DD format

                if (!dateReservation) {
                    $('#dateReservationError').text('Date Reservation is required.');
                    isValid = false;
                } else if (dateReservation < today) {
                    $('#dateReservationError').text('Date Reservation cannot be in the past.');
                      $('#reservation_date_reservation').css('border-color', 'red');
                    isValid = false;
                }

                // Validate Statut
                const statut = $('#reservation_statut').val();
                if (!statut) {
                    $('#statutError').text('Status is required.');
                    isValid = false;
                }

                // Validate Commentaires
                const commentaires = $('#reservation_commentaires').val();
                if (commentaires && commentaires.length > 500) {
                    $('#commentairesError').text('Commentaires cannot exceed 500 characters.');
                    isValid = false;
                }

                // Validate Creneau
                const creneau = $('#reservation_creneau').val();
                if (!creneau) {
                    $('#creneauError').text('Creneau is required.');
                    isValid = false;
                }

                // Validate User
                const user = $('#reservation_user').val();
                if (!user) {
                    $('#userError').text('User selection is required.');
                    isValid = false;
                }

                // Validate Service
                const service = $('#reservation_service').val();
                if (!service) {
                    $('#serviceError').text('Service selection is required.');
                    isValid = false;
                }

                // Prevent form submission if validation fails
                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
