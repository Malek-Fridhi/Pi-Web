                                    <div class="btn-group">
                                        <a href="{{ path('app_marque_export_pdf') }}" class="btn btn-danger mr-2">
                                            <i class="fas fa-file-pdf"></i> Exporter PDF
                                        </a>
                                        <a href="{{ path('app_marque_new') }}" class="btn btn-primary">
                                            <i class="fa fa-plus"></i> Ajouter
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="marque-table" class="display table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nom</th>
                                                <th>Image</th>
                                                <th>Téléphone</th>
                                                <th>Email</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for marque in marques %}
                                            <tr>
                                                <td>{{ marque.idMarque }}</td>
                                                <td>{{ marque.nom }}</td>
                                                <td>
                                                    {% if marque.image %}
                                                        <img src="{{ asset('uploads/marques/' ~ marque.image) }}" 
                                                             alt="{{ marque.nom }}" 
                                                             style="max-width: 100px; max-height: 50px;">
                                                    {% else %}
                                                        <span class="text-muted">Aucune image</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ marque.telephone }}</td>
                                                <td>{{ marque.email }}</td>
                                                <td>
                                                    <div class="form-button-action">
                                                        <a href="{{ path('app_marque_show', {'id_marque': marque.idMarque}) }}" 
                                                           class="btn btn-link btn-primary" 
                                                           data-toggle="tooltip" 
                                                           title="Voir détails">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <a href="{{ path('app_marque_edit', {'id_marque': marque.idMarque}) }}" 
                                                           class="btn btn-link btn-warning" 
                                                           data-toggle="tooltip" 
                                                           title="Modifier">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <form method="post" 
                                                              action="{{ path('app_marque_delete', {'id_marque': marque.idMarque}) }}" 
                                                              style="display: inline-block;"
                                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette marque ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.idMarque) }}">
                                                            <button class="btn btn-link btn-danger" data-toggle="tooltip" title="Supprimer">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
