                    .table-container {
                        margin: 20px auto;
                        width: 90%;
                        box-shadow: 0 0 10px rgba(0,0,0,0.1);
                        border-radius: 8px;
                        overflow: hidden;
                    }
                    table {
                        width: 100%;
                        border-collapse: collapse;
                    }
                    th, td {
                        padding: 12px 15px;
                        text-align: left;
                        border-bottom: 1px solid #ddd;
                    }
                    th {
                        background-color: #007bff;
                        color: white;
                        font-weight: bold;
                    }
                    tr:nth-child(even) {
                        background-color: #f2f2f2;
                    }
                    tr:hover {
                        background-color: #e9e9e9;
                    }
                    h1 {
                        text-align: center;
                        margin: 20px 0;
                        color: #333;
                    }
                </style>

                <div class="table-container">
                    <h1>Liste des Plans Nutritionnels avec leurs Objectifs</h1>
                    <table>
                        <thead>
                            <tr>
                                <th>ID Plan</th>
                                <th>Régime</th>
                                <th>ID Objectif</th>
                                <th>Description Objectif</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for plan in plans %}
                                <tr>
                                    <td>{{ plan.idPlan }}</td>
                                    <td>{{ plan.regime|slice(0, 50) ~ '...' }}</td>
                                    <td>{{ plan.objectif.idObjectif }}</td>
                                    <td>{{ plan.objectif.description }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Aucun plan nutritionnel trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
