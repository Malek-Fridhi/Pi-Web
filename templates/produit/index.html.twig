                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="produit-table" class="display table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nom</th>
                                                <th>Image</th>
                                                <th>Quantité</th>
                                                <th>Prix Achat</th>
                                                <th>Prix Vente</th>
                                                <th>Marge</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for produit in produits %}
                                            <tr>
                                                <td>{{ produit.id_produit }}</td>
                                                <td>{{ produit.nom }}</td>
                                                <td>
                                                    {% if produit.image %}
                                                        <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
                                                             alt="{{ produit.nom }}" 
                                                             style="max-width: 100px; max-height: 50px;">
                                                    {% else %}
                                                        <span class="text-muted">Aucune image</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ produit.quantite }}</td>
                                                <td>{{ produit.prix_achat }} DT</td>
                                                <td>{{ produit.prix_vente }} DT</td>
                                                <td>
                                                    {% set marge = produit.prix_vente - produit.prix_achat %}
                                                    <span class="badge 
                                                        {% if marge > 0 %}badge-success
                                                        {% else %}badge-danger
                                                        {% endif %}">
                                                        {{ marge|number_format(2) }} DT
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="form-button-action">
                                                        <a href="{{ path('app_produit_show', {'id_produit': produit.id_produit}) }}" 
                                                           class="btn btn-link btn-primary" 
                                                           data-toggle="tooltip" 
                                                           title="Voir détails">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <a href="{{ path('app_produit_edit', {'id_produit': produit.id_produit}) }}" 
                                                           class="btn btn-link btn-warning" 
                                                           data-toggle="tooltip" 
                                                           title="Modifier">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <form method="post" 
                                                              action="{{ path('app_produit_delete', {'id_produit': produit.id_produit}) }}" 
                                                              style="display: inline-block;"
                                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id_produit) }}">
                                                            <button class="btn btn-link btn-danger" 
                                                                    data-toggle="tooltip" 
                                                                    title="Supprimer">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
