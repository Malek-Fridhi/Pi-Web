                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- Navbar End -->

        <!-- Objectifs Section Start -->
        <div class="container-fluid courses overflow-hidden py-5">
            <div class="container py-5">
                <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                    <h4 class="text-primary">Mes Objectifs</h4>
                    <h1 class="display-4 text-white mb-4">Suivez vos progrès</h1>
                    <p class="text-white mb-0">Définissez et suivez vos objectifs de remise en forme avec notre système personnalisé.</p>
                </div>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center wow fadeInUp" data-wow-delay="0.3s">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="row gy-4 gx-0 justify-content-center">
                    {% for objectif in objectifs %}
                    <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="{{ 0.2 + (loop.index0 * 0.2) }}s">
                        <div class="courses-item">
                            <div class="courses-item-inner p-4">
                                <div class="d-flex justify-content-between mb-4">
                                    <div class="courses-icon-img p-3 bg-primary">
                                        <i class="fas fa-bullseye fa-2x text-white"></i>
                                    </div>
                                    <div class="data-info d-flex flex-column">
                                        <div class="courses-date">
                                            <p class="mb-1">Poids: {{ objectif.poidsActuel }} → {{ objectif.poidsCible }} kg</p>
                                            <p class="mb-0">Status: 
                                                <span class="badge bg-{{ objectif.status == 'enCours' ? 'warning' : 'success' }}">
                                                    {{ objectif.status == 'enCours' ? 'En Cours' : 'Atteint' }}
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <h4 class="mb-3">{{ objectif.description }}</h4>
                                
                                {% if objectif.planNutritionnels|length > 0 %}
                                    <h6 class="mt-3">Plan Nutritionnel:</h6>
                                    <p class="mb-4">
                                        {% for plan in objectif.planNutritionnels %}
                                            <strong>{{ plan.regime }}</strong> ({{ plan.nbrJours }} jours)<br>
                                        {% endfor %}
                                    </p>
                                {% else %}
                                    <p class="mb-4">Aucun plan nutritionnel associé.</p>
                                {% endif %}

                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('app_objectif_edit', {'idObjectif': objectif.idObjectif}) }}" class="btn btn-primary py-2 px-3">
                                        <i class="fas fa-edit me-1"></i> Modifier
                                    </a>
                                    <form action="{{ path('app_objectif_delete', {'idObjectif': objectif.idObjectif}) }}" method="post">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ objectif.idObjectif) }}">
                                        <button type="submit" class="btn btn-danger py-2 px-3" onclick="return confirm('Voulez-vous vraiment supprimer cet objectif ?')">
                                            <i class="fas fa-trash me-1"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
                        <div class="alert alert-info">
                            Aucun objectif disponible.
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <div class="text-center mt-5 wow fadeInUp" data-wow-delay="0.2s">
                    <a href="{{ path('app_objectif_new') }}" class="btn btn-primary py-3 px-5">
                        <i class="fas fa-plus me-2"></i> Créer un nouvel objectif
                    </a>
                </div>
            </div>
        </div>
        <!-- Objectifs Section End -->

