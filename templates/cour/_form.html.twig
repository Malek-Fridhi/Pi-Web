{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
{{ form_errors(form) }}

    <!-- Champ Nom -->
    <div class="form-field mb-3">
        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {
            'attr': {
                'class': 'form-control' ~ (form_errors(form.nom) ? ' is-invalid' : ''),
                'placeholder': 'Nom du cours*'
            }
        }) }}
        {% if form_errors(form.nom) %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.nom) }}
            </div>
        {% endif %}
    </div>

    <!-- Champ Description -->
    <div class="form-field mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {
            'attr': {
                'class': 'form-control' ~ (form_errors(form.description) ? ' is-invalid' : ''),
                'placeholder': 'Description du cours*'
            }
        }) }}
        {% if form_errors(form.description) %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
    </div>

    <!-- Champ Capacité -->
    <div class="form-field mb-3">
        {{ form_label(form.capacite, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.capacite, {
            'attr': {
                'class': 'form-control' ~ (form_errors(form.capacite) ? ' is-invalid' : ''),
                'placeholder': 'Capacité du cours*'
            }
        }) }}
        {% if form_errors(form.capacite) %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.capacite) }}
            </div>
        {% endif %}
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>

{{ form_end(form) }}
